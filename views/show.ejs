<%- include ("partials/header")%>
<h1><%= blog.title %></h1>
<p><%= blog.body %></p>
<img src="<%= blog.image %>" alt="Blog Image">
<form action="<%= blog._id %>?_method=DELETE" method="POST">
    <button>DELETE</button>
</form>
<h2>Comments:</h2>
<% blog.comment.forEach(function(comment){ %>
    <li>
    <b><%= comment.text%></b>
    ---<%= comment.author%>
    </li>
<% })%>
<form action="/blogs/<%= blog._id %>/comments/new" method="post">
    <input type="text" name="comment[text]" placeholder="Write a comment">
    <input type="text" name="comment[author]" placeholder="Post as">
    <button type="submit">Submit</button>
</form>
<%- include ("partials/footer")%>